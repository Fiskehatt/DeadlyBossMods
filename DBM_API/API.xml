	<Frame name="DBM_API" hidden="false">
		<Scripts>
			<OnLoad>				
				DBM.OnLoad();
				this.elapsed = 0;
			</OnLoad>
			<OnEvent>
				DBM.OnEvent(event, arg1);
			</OnEvent>
			<OnUpdate>
				this.elapsed = this.elapsed + arg1;
				if this.elapsed > 0.066 then					
					DBM.OnUpdate(this.elapsed);
					this.elapsed = 0;
				end
				DBM.SpecialWarningsOnUpdate(arg1);
			</OnUpdate>
		</Scripts>
	</Frame>
	
